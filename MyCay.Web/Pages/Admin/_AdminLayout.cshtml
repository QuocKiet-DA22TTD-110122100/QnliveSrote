    <script>
        // Check login
        const user = JSON.parse(localStorage.getItem('user') || '{}');
        if (!user.email || (user.role !== 'admin' && user.role !== 'manager' && user.role !== 'staff')) {
            window.location.href = '/DangNhap?redirect=/Admin';
        }

        // Update user name
        if (user.name) {
            document.getElementById('headerUserName').textContent = user.name;
        }

        // Show/hide admin-only sections based on role
        if (user.role !== 'admin') {
            document.querySelectorAll('.admin-only').forEach(el => el.style.display = 'none');
        }

        // Sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        });

        // User dropdown
        document.querySelector('.user-btn').addEventListener('click', function() {
            document.querySelector('.dropdown-menu').classList.toggle('show');
        });

        // Active nav item
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-item').forEach(item => {
            if (item.getAttribute('href') === currentPath) {
                item.classList.add('active');
            } else if (currentPath !== '/Admin' && item.getAttribute('href') !== '/Admin') {
                item.classList.remove('active');
            }
        });

        function logout() {
            localStorage.removeItem('user');
            window.location.href = '/DangNhap';
        }
    </script>
