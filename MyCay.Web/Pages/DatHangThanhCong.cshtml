                <span class="label">üìç ƒê·ªãa ch·ªâ</span>
                <span class="value">${lastOrder.address || 'N/A'}</span>
            </div>
            <div class="detail-row">
                <span class="label">üí≥ Thanh to√°n</span>
                <span class="value">${lastOrder.paymentMethod || 'Ti·ªÅn m·∫∑t (COD)'}</span>
            </div>
            ${lastOrder.items ? `
            <div class="detail-row">
                <span class="label">üçú S·ªë m√≥n</span>
                <span class="value">${lastOrder.items.length} m√≥n</span>
            </div>
            ` : ''}
            <div class="detail-row total">
                <span class="label">üí∞ T·ªïng ti·ªÅn</span>
                <span class="value">${formatPrice(lastOrder.total || 0)}ƒë</span>
            </div>
        `;
        
        document.getElementById('orderDetails').innerHTML = detailsHtml;
        
        // Update order time
        if (lastOrder.orderTime) {
            const orderDate = new Date(lastOrder.orderTime);
            document.getElementById('orderTime').textContent = formatTime(orderDate);
        }
    }
    
    // Generate QR Code for order
    function generateQRCode(orderCode, orderData) {
        const qrContainer = document.getElementById('qrCode');
        
        // S·ª≠ d·ª•ng ƒë·ªãa ch·ªâ hi·ªán t·∫°i c·ªßa trang web (h·ªó tr·ª£ c·∫£ localhost v√† IP)
        const baseUrl = window.location.origin;
        const trackingUrl = `${baseUrl}/TraCuuDonHang?code=${orderCode}`;
        
        console.log('QR URL:', trackingUrl);
        
        // Use QR Server API (free, reliable)
        const qrImageUrl = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(trackingUrl)}`;
        
        qrContainer.innerHTML = `<img src="${qrImageUrl}" alt="QR Code - ${orderCode}" style="width:120px;height:120px;" onerror="this.parentElement.innerHTML='<div style=\\'padding:20px;text-align:center;color:#ef4444;\\'>L·ªói t·∫£i QR</div>'" />`;
    }
    
    function formatPrice(num) {
        return Math.round(num).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }
    
    function formatTime(date) {
        const hours = date.getHours().toString().padStart(2, '0');
        const minutes = date.getMinutes().toString().padStart(2, '0');
        return `${hours}:${minutes} - ${date.toLocaleDateString('vi-VN')}`;
    }
    
