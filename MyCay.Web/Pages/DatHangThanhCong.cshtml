            window.location.href = '/';
            return;
        }
        
        // Update order code if from localStorage
        if (!document.getElementById('orderCode').textContent && lastOrder.orderCode) {
            document.getElementById('orderCode').textContent = lastOrder.orderCode;
        }
        
        const finalOrderCode = document.getElementById('orderCode').textContent;
        
