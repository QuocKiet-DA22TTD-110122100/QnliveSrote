@section Scripts {
<script>
// Check URL params on load
document.addEventListener('DOMContentLoaded', function() {
    const params = new URLSearchParams(window.location.search);
    const code = params.get('code');
    if (code) {
        document.getElementById('orderCodeInput').value = code;
        searchOrder();
    }
});

async function searchOrder() {
    const code = document.getElementById('orderCodeInput').value.trim();
    if (!code) {
        alert('Vui l√≤ng nh·∫≠p m√£ ƒë∆°n h√†ng!');
        return;
    }
    
    document.getElementById('orderResult').style.display = 'none';
    document.getElementById('notFound').style.display = 'none';
    
    try {
        // Search by order code
        const res = await fetch(`/api/orders/search?code=${encodeURIComponent(code)}`);
        const data = await res.json();
        
        if (data.success && data.data) {
            displayOrder(data.data);
        } else {
            document.getElementById('notFound').style.display = 'block';
        }
    } catch (err) {
        console.error('Search error:', err);
        document.getElementById('notFound').style.display = 'block';
    }
}

function displayOrder(order) {
    const statusClass = getStatusClass(order.status);
    const items = order.items || [];
    
    const html = `
        <div class="result-header">
            <span class="result-code">${order.code}</span>
            <span class="result-status ${statusClass}">${order.status}</span>
        </div>
        <div class="result-info">
            <div class="info-row">
                <span class="info-label">üë§ Kh√°ch h√†ng</span>
                <span class="info-value">${order.customerName}</span>
            </div>
            <div class="info-row">
                <span class="info-label">üì± ƒêi·ªán tho·∫°i</span>
                <span class="info-value">${order.phone}</span>
            </div>
            <div class="info-row">
                <span class="info-label">üìç ƒê·ªãa ch·ªâ</span>
                <span class="info-value">${order.address || 'N/A'}</span>
            </div>
            <div class="info-row">
                <span class="info-label">üí≥ Thanh to√°n</span>
                <span class="info-value">${order.paymentMethod}</span>
            </div>
            <div class="info-row">
                <span class="info-label">üìÖ Ng√†y ƒë·∫∑t</span>
                <span class="info-value">${formatDate(order.createdAt)}</span>
            </div>
        </div>
        ${items.length > 0 ? `
        <div class="result-items">
            <h4>üçú Chi ti·∫øt ƒë∆°n h√†ng</h4>
            ${items.map(i => `
                <div class="item-row">
                    <span class="item-name">${i.name} x${i.quantity}</span>
                    <span class="item-price">${formatPrice(i.price * i.quantity)}ƒë</span>
                </div>
            `).join('')}
        </div>
        ` : ''}
        <div class="result-total">
            <span>T·ªïng c·ªông</span>
            <span class="value">${formatPrice(order.total)}ƒë</span>
        </div>
    `;
    
    document.getElementById('orderResult').innerHTML = html;
    document.getElementById('orderResult').style.display = 'block';
}

function getStatusClass(status) {
    const map = {
        'Ch·ªù x√°c nh·∫≠n': 'status-pending',
        'ƒêang chu·∫©n b·ªã': 'status-preparing',
        'ƒêang giao': 'status-shipping',
        'Ho√†n th√†nh': 'status-completed',
        'ƒê√£ h·ªßy': 'status-cancelled'
    };
    return map[status] || 'status-pending';
}

function formatPrice(n) {
    return Math.round(n || 0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
}

function formatDate(d) {
    if (!d) return '';
    const date = new Date(d);
    return date.toLocaleDateString('vi-VN') + ' ' + date.toLocaleTimeString('vi-VN', {hour:'2-digit', minute:'2-digit'});
}
